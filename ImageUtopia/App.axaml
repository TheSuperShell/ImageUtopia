<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ImageUtopia.App"
             xmlns:local="using:ImageUtopia"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Controls/FolderButtonTemplate.axaml"></StyleInclude>
    </Application.Styles>
             
    <Application.Resources>
        <SolidColorBrush x:Key="GrayBrush">#353639</SolidColorBrush>
        <SolidColorBrush x:Key="DarkGrayBrush">#303134</SolidColorBrush>
        <SolidColorBrush x:Key="DarkestGrayBrush">#2a2b2f</SolidColorBrush>
        <SolidColorBrush x:Key="PressedGrayBrush">#525457</SolidColorBrush>
        <SolidColorBrush x:Key="HoverGrayBrush">#444548</SolidColorBrush>
    </Application.Resources>
</Application>